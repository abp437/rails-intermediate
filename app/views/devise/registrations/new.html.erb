<div class="container" id="sign-up-form">
  <div class="row">
    <h1 class="text-center">Get in touch with like-minded people</h1>
    <h3 class="mb-5 text-center">Create, study, accomplish goals together</h3>
    <div class="col-md-6 offset-md-3">
      <h3>Sign up <small>it's free!</small></h3>
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.text_field :name, placeholder: "Username will be shown publicly", class: "mb-3" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "mb-3" %>
        </div>

        <div class="field">
          <%= f.password_field :password, placeholder: "Password", class: "mb-3" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, placeholder: "Confirm password", class: "mb-3" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign Up", class: "form-control mb-3 sign-up-button" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
